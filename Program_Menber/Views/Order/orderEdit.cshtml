@model Program_Menber.Models.CMorder

@{
    ViewBag.Title = "orderEdit";
    Layout = "~/Views/Shared/__LayoutMember.cshtml";
}
<section id="major">
    <h2>訂單修改</h2>


    <form method="post" enctype="multipart/form-data">
        <input type="hidden" name="oid" value="@Model.oid">
        <p>
            下單日期<br />
            <input type="text" name="odate" value="@Model.odate">
        </p>
        <p>
            會員姓名<br />
            <input type="text" name="odate" value="@Model.omemail">
        </p>
        <p>
            會員編號<br />
            <input type="text" name="omid" value="@Model.omid">
        </p>
        <p>
            會員信箱<br />
            <input type="text" name="omemail" value="@Model.omemail">
        </p>
        <p>
            下單產品<br />
            <input type="text" name="oproduct" value="@Model.oproduct">
        </p>
        <p>
            下單廟宇<br />
            <input type="text" name="otem" value="@Model.otem">
        </p>
        <p>
            下單數量<br />
            <input type="text" name="ounit" value="@Model.ounit">
        </p>
        <p>
            總金額<br />
            <input type="text" name="opayment" value="@Model.opayment">
        </p>
        <p>
            平台是否收到郵件<br />
            <input type="text" name="ofin" value="@Model.ofin">
        </p>
        <p>
            訂單備註<br />
            <input type="text" name="odetail" value="@Model.odetail">
        </p>
        <p>
            完成訂單照片
            <img src="~/images/@Model.opic" width="250" height="300" class="rounded mx-auto d-block" />
        </p>

        <div>
            <input type="file" name="photo" />
            <input type="submit" value="上傳" />
        </div>

        <p><input type="submit" value="送出" /></p>
    </form>

    <div>
        @Html.ActionLink("Back to List", "orderList")
    </div>
    </section>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
