@model Program_Menber.Models.Product
@{
    ViewBag.Title = "pdetail";
    string photo = "p" + @Model.pid + ".jpg";
}

<head>
    
    <style>

        table {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>

</head>

<body>
    <section id="major">
        <h2 align="center">商品詳情頁</h2>


        <p>
            <img src="~/images/@photo" width="250" height="300" class="rounded mx-auto d-block" />
        </p>




        @{
            if (ViewBag.KK != null)
            {
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>祈福類別:</td>
                            <td>@Model.pcate</td>
                        </tr>
                        <tr>
                            <td>祈福介紹:</td>
                            <td>@Model.pintroduce</td>
                        </tr>
                        <tr>
                            <td>宮廟縣市:</td>
                            <td>@Model.pcity</td>
                        </tr>
                        <tr>
                            <td>點燈產品:</td>
                            <td>@Model.pname</td>
                        </tr>
                        <tr>
                            <td>點燈廟宇:</td>
                            <td>@Model.ptemp</td>
                        </tr>
                        <tr>
                            <td>宮廟網址:</td>
                            <td>@Model.pwebsite</td>
                        </tr>
                        <tr>
                            <td>詳細介紹:</td>
                            <td>@Model.pdetail</td>
                        </tr>
                        <tr>
                            <td>價格:</td>
                            <td>@Model.pprice</td>
                        </tr>

                    </tbody>
                </table>


            }
            else
            {
                <h3>找不到符合條件的資料</h3>
            }
        }
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        </section>
</body>

